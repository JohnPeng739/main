.border {
  border: 1rpx solid #ddd;
}

.border-warn {
  border: 1rpx dashed red;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 30rpx 50rpx 10rpx 50rpx;
}

.section {
  clear: both;
  width: 100%;
  padding-top: 20rpx;
}

.row {
  position: relative;
  border-bottom: 2rpx solid #eee;
  height: 120rpx;
  line-height:120rpx;
  overflow: hidden;
}

.title {
  padding-top: 50rpx;
  font-size: 1.1rem;
  font-weight: 800;
}

.validate-tips {
  padding-top: 40rpx;
  color: red;
}

.section-label {
  float: left;
  text-align: center;
  padding: 0;
}

.section-input {
  float: right;
  padding: 0 0 0 15rpx;
}

.digit-input {
  text-align: right;
  padding: 0 20rpx 0 15rpx;
}

.button {
  height: 80rpx;
}

.button.single {
  margin: 50rpx 0 0 0;
  width: 100%;
}

.button.item {
  display: inline-block;
  margin: 20rpx 20rpx;
  width: 200rpx;
  text-align: center;
}

.image-icon {
  width: 36rpx;
  height: 36rpx;
}