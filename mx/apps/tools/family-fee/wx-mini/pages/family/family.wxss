/* pages/family/family.wxss */
@import "/utils/base";

.section-label {
  float: left;
  text-align: center;
  width: 20%;
  padding: 0;
}

.section-input {
  float: right;
  width: 75%;
  padding: 0 0 0 15rpx;
}

.form-owner-avatar {
  float: left;
  margin-top: 10rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}

.section-nickname {
  float: left;
  width: 40%;
}

.picker {
  float: right;
  width: 40%;
  text-align: right;
}

.form-label {
  margin: 10rpx 0 0 0;
  font-size: 16rpx;
  font-weight: 600;
}

.member {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  padding: 0 50rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
  border-radius: 20%;
}

.add-member {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  padding-bottom: 20rpx;
}

.submit-button {
  margin: 50rpx 0 0 0;
  padding: 0;
  width: 100%;
  height: 80rpx;
}