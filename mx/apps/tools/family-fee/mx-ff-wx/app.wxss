/**app.wxss**/
@import '/weui.wxss';
@import '/components/tabBar/tabBar.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.important {
  font-size: 1.1em;
  font-weight: 700;
  color: red;
}

.unimportant {
  font-weight: 400;
  color: darkgray;
}

.btn-view_gap {
  padding-top: 50rpx;
}

.avatar-big {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.avatar-normal {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.avatar-small {
  width: 64rpx;
  height: 64rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.view__gap {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
}

.view__wrap {
  display: flex;
  flex-flow: row wrap;
  vertical-align: middle;
}

.view-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.cell__gap {
  padding-left: 15rpx;
  padding-right: 20rpx;
}

